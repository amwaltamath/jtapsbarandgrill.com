<style>
  .watch-page {
    background: var(--bg-light);
  }

  .watch-hero {
    background: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.6)), url('/images/6441-Glenway-inside.jpg') center/cover;
    color: var(--text-light);
    padding: 6rem 2rem;
    text-align: center;
  }

  .watch-hero h1 {
    font-size: 4rem;
    color: var(--secondary-color);
    margin-bottom: 1rem;
  }

  .tagline {
    font-size: 1.3rem;
    letter-spacing: 2px;
    margin-bottom: 3rem;
    color: var(--text-light);
  }

  .hero-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .feature {
    background: rgba(255,255,255,0.1);
    padding: 2rem;
    border-radius: 10px;
    backdrop-filter: blur(10px);
  }

  .feature-icon {
    font-size: 3rem;
    display: block;
    margin-bottom: 1rem;
  }

  .feature h3 {
    font-size: 1.3rem;
    margin-bottom: 0.5rem;
    color: var(--secondary-color);
  }

  .why-jtaps {
    padding: 6rem 2rem;
    background: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .why-jtaps h2 {
    font-size: 3rem;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--primary-color);
  }

  .reasons {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .reason {
    background: var(--bg-light);
    padding: 2rem;
    border-radius: 10px;
    border-left: 4px solid var(--secondary-color);
  }

  .reason h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--primary-color);
  }

  .reason p {
    line-height: 1.8;
    color: var(--text-dark);
  }

  .sports-schedule {
    padding: 6rem 2rem;
    background: var(--primary-color);
    color: var(--text-light);
  }

  .sports-schedule h2 {
    font-size: 3rem;
    text-align: center;
    margin-bottom: 1rem;
    color: var(--secondary-color);
  }

  .schedule-subtitle {
    text-align: center;
    font-size: 1.2rem;
    margin-bottom: 3rem;
  }

  .sports-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .sport-card {
    background: rgba(255,255,255,0.1);
    padding: 2rem;
    border-radius: 10px;
    text-align: center;
    transition: transform 0.3s;
  }

  .sport-card:hover {
    transform: translateY(-5px);
    background: rgba(255,255,255,0.15);
  }

  .sport-card h3 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    color: var(--secondary-color);
  }

  .visit-cta {
    background: var(--bg-light);
    padding: 6rem 2rem;
    text-align: center;
  }

  .visit-cta h2 {
    font-size: 3rem;
    color: var(--primary-color);
    margin-bottom: 1rem;
  }

  .visit-cta p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    color: var(--text-dark);
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-button {
    display: inline-block;
    background: var(--secondary-color);
    color: white;
    padding: 1.2rem 3rem;
    text-decoration: none;
    font-weight: bold;
    border-radius: 5px;
    transition: transform 0.3s;
  }

  .cta-button:hover {
    transform: translateY(-2px);
  }

  .cta-button.secondary {
    background: var(--primary-color);
  }

  @media (max-width: 768px) {
    .watch-hero h1 {
      font-size: 2.5rem;
    }

    .hero-features {
      grid-template-columns: repeat(2, 1fr);
    }

    .reasons {
      grid-template-columns: 1fr;
    }

    .why-jtaps h2,
    .sports-schedule h2,
    .visit-cta h2 {
      font-size: 2rem;
    }
  }
</style>
