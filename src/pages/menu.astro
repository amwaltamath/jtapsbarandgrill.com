<style>
  .menu-page {
    background: var(--bg-light);
  }

  .menu-hero {
    background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('/images/Sides.jpg') center/cover;
    color: var(--text-light);
    text-align: center;
    padding: 8rem 2rem 6rem;
    min-height: 600px;
    height: 45vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .menu-hero h1 {
    font-size: 4rem;
    color: var(--secondary-color);
    margin-bottom: 1rem;
  }

  .subtitle {
    font-size: 1.2rem;
    color: var(--secondary-color);
    font-weight: bold;
    letter-spacing: 2px;
  }

  .menu-section {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  .menu-category {
    background: white;
    padding: 3rem;
    margin-bottom: 3rem;
    border-radius: 10px;
    box-shadow: 0 5px 20px rgba(0,0,0,0.1);
  }

  .menu-category h2 {
    font-size: 2.5rem;
    color: var(--primary-color);
    margin-bottom: 0.5rem;
  }

  .category-desc {
    color: var(--secondary-color);
    font-weight: bold;
    margin-bottom: 2rem;
    font-size: 1.1rem;
  }

  .menu-items {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2.5rem;
  }

  .menu-item {
    border: 1px solid #e0e0e0;
    border-radius: 10px;
    overflow: hidden;
    background: white;
    transition: transform 0.3s, box-shadow 0.3s;
    display: flex;
    flex-direction: column;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    height: 100%;
  }

  .menu-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
  }

  .menu-image {
    width: 100%;
    height: 250px;
    object-fit: cover;
    display: block;
  }

  /* Make wings image larger and show full image */
  .menu-category:first-child .menu-image {
    height: 350px;
    object-fit: contain;
    background: #f8f8f8;
  }

  .item-header {
    display: flex;
    justify-content: center;
    align-items: baseline;
    margin-bottom: 0.5rem;
    padding-top: 1rem;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .item-header h3 {
    font-size: 1.3rem;
    color: var(--primary-color);
    text-align: center;
  }

  .price {
    font-weight: bold;
    color: var(--secondary-color);
    font-size: 1.2rem;
  }

  .menu-item p {
    color: var(--text-dark);
    line-height: 1.6;
    padding: 0 1rem;
    font-size: 0.95rem;
    flex-grow: 1;
  }

  .order-now-btn {
    display: block;
    background: var(--secondary-color);
    color: white;
    text-align: center;
    padding: 0.8rem 1.5rem;
    text-decoration: none;
    font-weight: bold;
    border-radius: 0;
    transition: background 0.3s;
    margin: 1rem 1rem 1rem 1rem;
    border-radius: 5px;
    font-size: 0.95rem;
  }

  .order-now-btn:hover {
    background: #c42e1a;
  }

  .order-cta {
    background: var(--primary-color);
    color: var(--text-light);
    text-align: center;
    padding: 6rem 2rem;
  }

  .order-cta h2 {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: var(--secondary-color);
  }

  .order-cta p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }

  .order-button {
    display: inline-block;
    background: var(--secondary-color);
    color: white;
    padding: 1.2rem 3rem;
    text-decoration: none;
    font-weight: bold;
    border-radius: 5px;
    font-size: 1.1rem;
    transition: transform 0.3s;
  }

  .order-button:hover {
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .menu-hero {
      padding: 5rem 1rem 3rem;
      min-height: 250px;
      height: 30vh;
    }
    .menu-hero h1 {
      font-size: 2.2rem;
    }
    .subtitle {
      font-size: 1rem;
    }
    .menu-category {
      padding: 2rem 1.5rem;
    }

    .menu-category h2 {
      font-size: 2rem;
    }

    .item-header {
      flex-direction: column;
      align-items: flex-start;
    }
  }

  @media (max-width: 480px) {
    .menu-hero {
      padding: 3rem 0.5rem 2rem;
      min-height: 180px;
      height: 22vh;
    }
    .menu-hero h1 {
      font-size: 1.5rem;
    }
    .subtitle {
      font-size: 0.9rem;
    }
  }
</style>
