---
import Navigation from '../components/Navigation';

interface Props {
  title: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
}

const { 
  title, 
  description = "JTAPS Bar and Grill - Cincinnati's best sports bar since 2006. Famous wings, hand-carved gyros, juicy burgers, and 50+ TVs for watching the game.",
  keywords = "sports bar cincinnati, best wings cincinnati, gyros cincinnati, watch the game cincinnati, burgers cincinnati, glenway ave restaurant",
  ogImage = "/images/jtaps-og.jpg"
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <link rel="canonical" href={Astro.url} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />
    
    <!-- Local Business Schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Restaurant",
        "name": "JTAPS Bar and Grill",
        "image": "/images/jtaps-og.jpg",
        "@id": "https://jtapsbarandgrill.com",
        "url": "https://jtapsbarandgrill.com",
        "telephone": "(513) 574-9777",
        "priceRange": "$$",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "6441 Glenway Ave",
          "addressLocality": "Cincinnati",
          "addressRegion": "OH",
          "postalCode": "45211",
          "addressCountry": "US"
        },
        "servesCuisine": ["American", "Greek", "Bar Food"],
        "hasMenu": "https://jtapsbarandgrill.com/menu",
        "acceptsReservations": "False"
      }
    </script>
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <Navigation client:load />
    </header>
    
    <main>
      <slot />
    </main>
    
    <footer>
      <div class="footer-content">
        <div class="footer-logo">
          <h3>JTAPS</h3>
          <p>BAR AND GRILL EST 2006</p>
        </div>
        <div class="footer-info">
          <p>&copy; {new Date().getFullYear()} JTAPS Bar and Grill. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --primary-color: #1a1a1a;
    --secondary-color: #E13622;
    --text-light: #ffffff;
    --text-dark: #333333;
    --bg-light: #f5f5f5;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    line-height: 1.6;
    color: var(--text-dark);
  }

  header {
    background: var(--primary-color);
  }

  main {
    min-height: 80vh;
  }

  footer {
    background: #000;
    color: #ffd2d2;
    padding: 2rem 1rem;
    border-top: none;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
    background: transparent;
  }

  .footer-logo h3 {
    color: #fff;
    font-size: 1.8rem;
    margin-bottom: 0.5rem;
  }

  @media (max-width: 1024px) {
  }

  @media (max-width: 768px) {
  }
</style>
