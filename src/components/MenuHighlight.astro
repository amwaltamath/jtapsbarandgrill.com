---
interface Props {
  title: string;
  subtitle: string;
  description: string;
  image: string;
  reverse?: boolean;
}

const { title, subtitle, description, image, reverse = false } = Astro.props;
---

<article class={`menu-item ${reverse ? 'reverse' : ''}`}>
  <div class="menu-item-image">
    <img src={image} alt={title} loading="lazy" />
  </div>
  <div class="menu-item-content">
    <h2>{title}</h2>
    <p class="subtitle">{subtitle}</p>
    <p class="description">{description}</p>
    <a href="https://togoorder.com/web/3136#/" target="_blank" class="order-button">Order Online</a>
  </div>
</article>

<style>
  .menu-item {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    padding: 4rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
    align-items: center;
  }

  .menu-item.reverse {
    direction: rtl;
  }

  .menu-item.reverse > * {
    direction: ltr;
  }

  .menu-item-image img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 10px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
  }

  .menu-item-content h2 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--primary-color);
  }

  .subtitle {
    color: var(--secondary-color);
    font-weight: bold;
    font-size: 0.9rem;
    letter-spacing: 1px;
    margin-bottom: 1rem;
  }

  .description {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 2rem;
    color: var(--text-dark);
  }

  .order-button {
    display: inline-block;
    padding: 0.8rem 2rem;
    background: var(--primary-color);
    color: var(--text-light);
    text-decoration: none;
    border-radius: 5px;
    transition: background 0.3s;
  }

  .order-button:hover {
    background: var(--secondary-color);
    color: var(--primary-color);
  }

  @media (max-width: 1024px) {
    .menu-item {
      gap: 2rem;
      padding: 3rem 1.5rem;
    }

    .menu-item-content h2 {
      font-size: 2rem;
    }

    .menu-item-image img {
      height: 350px;
    }
  }

  @media (max-width: 768px) {
    .menu-item {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      padding: 2rem 1rem;
    }

    .menu-item.reverse {
      direction: ltr;
    }

    .menu-item-content h2 {
      font-size: 1.75rem;
    }

    .menu-item-image img {
      height: 300px;
    }

    .description {
      font-size: 1rem;
    }

    .order-button {
      min-height: 44px;
      padding: 0.8rem 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .menu-item {
      padding: 1.5rem 1rem;
    }

    .menu-item-content h2 {
      font-size: 1.5rem;
    }

    .subtitle {
      font-size: 0.85rem;
    }

    .description {
      font-size: 0.95rem;
      line-height: 1.5;
    }

    .menu-item-image img {
      height: 250px;
    }
  }
</style>
